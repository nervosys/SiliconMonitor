{
  "dashboard": {
    "id": null,
    "uid": "simon-host-detail",
    "title": "Simon Host Detail",
    "description": "Single-host deep dive with Silicon Monitor",
    "tags": ["simon", "host"],
    "timezone": "browser",
    "refresh": "5s",
    "time": { "from": "now-1h", "to": "now" },
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(simon_cpu_usage_percent, instance)"
        }
      ]
    },
    "panels": [
      {
        "title": "CPU Usage per Core",
        "type": "heatmap",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [{ "expr": "simon_cpu_usage_percent{instance=~\"$instance\"}", "legendFormat": "Core {{core}}" }]
      },
      {
        "title": "CPU Frequency",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [{ "expr": "simon_cpu_frequency_mhz{instance=~\"$instance\"}", "legendFormat": "Core {{core}}" }],
        "fieldConfig": { "defaults": { "unit": "rotmhz" } }
      },
      {
        "title": "CPU Temperature",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [{ "expr": "simon_cpu_temperature_celsius{instance=~\"$instance\"}" }],
        "fieldConfig": { "defaults": { "unit": "celsius" } }
      },
      {
        "title": "Memory & Swap",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          { "expr": "simon_memory_used_bytes{instance=~\"$instance\"}", "legendFormat": "Memory Used" },
          { "expr": "simon_memory_total_bytes{instance=~\"$instance\"}", "legendFormat": "Memory Total" },
          { "expr": "simon_swap_used_bytes{instance=~\"$instance\"}", "legendFormat": "Swap Used" }
        ],
        "fieldConfig": { "defaults": { "unit": "bytes" } }
      },
      {
        "title": "Load Average",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "targets": [
          { "expr": "simon_load_average_1m{instance=~\"$instance\"}", "legendFormat": "1m" },
          { "expr": "simon_load_average_5m{instance=~\"$instance\"}", "legendFormat": "5m" }
        ]
      },
      {
        "title": "Disk I/O",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "targets": [
          { "expr": "rate(simon_disk_read_bytes_total{instance=~\"$instance\"}[5m])", "legendFormat": "Read {{device}}" },
          { "expr": "rate(simon_disk_write_bytes_total{instance=~\"$instance\"}[5m])", "legendFormat": "Write {{device}}" }
        ],
        "fieldConfig": { "defaults": { "unit": "Bps" } }
      },
      {
        "title": "Disk Usage",
        "type": "bargauge",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
        "targets": [{ "expr": "simon_disk_usage_percent{instance=~\"$instance\"}", "legendFormat": "{{device}}" }],
        "fieldConfig": { "defaults": { "min": 0, "max": 100, "unit": "percent" } }
      },
      {
        "title": "Network Traffic",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
        "targets": [
          { "expr": "rate(simon_network_rx_bytes_total{instance=~\"$instance\"}[5m])", "legendFormat": "RX {{interface}}" },
          { "expr": "rate(simon_network_tx_bytes_total{instance=~\"$instance\"}[5m])", "legendFormat": "TX {{interface}}" }
        ],
        "fieldConfig": { "defaults": { "unit": "Bps" } }
      },
      {
        "title": "System Uptime",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 32 },
        "targets": [{ "expr": "simon_uptime_seconds{instance=~\"$instance\"}" }],
        "fieldConfig": { "defaults": { "unit": "s" } }
      },
      {
        "title": "Process Count",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 32 },
        "targets": [{ "expr": "simon_process_count{instance=~\"$instance\"}" }]
      }
    ]
  }
}
